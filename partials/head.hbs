<header id="gh-head"
    class="gh-head p-[4vmin] bg-inherit transition-all overflow-hidden group-[.is-menu-open]:fixed group-[.is-menu-open]:inset-0 group-[.is-menu-open]:z-[900] group-[.is-menu-open]:overflow-y-scroll sm:overflow-auto">
    <nav
        class="gh-head-inner grid grid-cols-[1fr] gap-10 grid-flow-row-dense gh-container w-full max-w-[var(--container-width)] mx-auto h-full sm:h-auto sm:grid-cols-[1fr_auto_1fr] group-[.is-menu-open]:grid-rows-[auto_1fr_auto]">

        <div
            class="gh-head-brand relative z-10 col-auto flex sm:grid justify-between select-none sm:select-auto items-center sm:max-w-[200px] text-center break-all sm:col-[2/3]">
            <a class="gh-head-logo text-inherit no-underline block font-bold leading-tight text-2xl sm:text-xl"
                href="{{@site.url}}">
                {{#if @site.logo}}
                <img class="max-h-10" src="{{@site.logo}}" alt="{{@site.title}}" />
                {{else}}
                {{@site.title}}
                {{/if}}
            </a>
            <a class="gh-burger inline-block relative sm:hidden cursor-pointer" role="button" aria-label="menu">
                <div
                    class="gh-burger-box relative flex items-center justify-center w-8 h-8 before:m-auto before:absolute before:block before:inset-0 before:content-[''] before:w-full before:h-px before:bg-current before:transition-all before:will-change-[transform,width] group-[.is-menu-open]:before:w-0 group-[.is-menu-open]:before:translage-x-[19px] group-[.is-menu-open]:before:transition-all">
                    <div
                        class="gh-burger-inner w-full h-full before:m-auto before:absolute before:block before:inset-0 before:content-[''] before:w-full before:h-px before:bg-current before:transition-all before:will-change-[transform,width] before:-translate-y-[6px] group-[.is-menu-open]:before:w-[26px] group-[.is-menu-open]:before:translate-x-[6px] group-[.is-menu-open]:before:translate-y-0 group-[.is-menu-open]:before:rotate-[135deg] after:m-auto after:absolute after:block after:inset-0 after:content-[''] after:w-full after:h-px after:bg-current after:transition-all after:will-change-[transform,width] after:translate-y-[6px] group-[.is-menu-open]:after:w-[26px] group-[.is-menu-open]:after:translate-x-[6px] group-[.is-menu-open]:after:translate-y-0 group-[.is-menu-open]:after:rotate-[-135deg]">
                    </div>
                </div>
            </a>
        </div>
        <div
            class="gh-head-menu hidden self-center flex-col items-center text-center mb-[10vh] font-light text-3xl leading-tighter sm:flex sm:self-auto sm:flex-row sm:text-left sm:mb-auto sm:text-base sm:leading-normal group-[.is-menu-open]:flex">
            {{navigation}}
        </div>
        <div
            class="gh-head-actions hidden pt-5 sm:pt-0 sm:flex justify-center text-left sm:justify-end items-center list-none sm:text-right group-[.is-menu-open]:flex">
            <div class="gh-head-actions-list inline-flex gap-4 flex-wrap flex-end items-center">
                <div class="flex flex-col justify-center ml-3">
                    <input type="checkbox" id="light-switch" name="light-switch" class="light-switch sr-only" />
                    <label class="relative cursor-pointer p-2" for="light-switch">
                        <svg class="dark:hidden" width="16" height="16" xmlns="http://www.w3.org/2000/svg">
                            <path class="fill-slate-300"
                                d="M7 0h2v2H7zM12.88 1.637l1.414 1.415-1.415 1.413-1.413-1.414zM14 7h2v2h-2zM12.95 14.433l-1.414-1.413 1.413-1.415 1.415 1.414zM7 14h2v2H7zM2.98 14.364l-1.413-1.415 1.414-1.414 1.414 1.415zM0 7h2v2H0zM3.05 1.706 4.463 3.12 3.05 4.535 1.636 3.12z" />
                            <path class="fill-slate-400" d="M8 4C5.8 4 4 5.8 4 8s1.8 4 4 4 4-1.8 4-4-1.8-4-4-4Z" />
                        </svg>
                        <svg class="hidden dark:block" width="16" height="16" xmlns="http://www.w3.org/2000/svg">
                            <path class="fill-slate-400"
                                d="M6.2 1C3.2 1.8 1 4.6 1 7.9 1 11.8 4.2 15 8.1 15c3.3 0 6-2.2 6.9-5.2C9.7 11.2 4.8 6.3 6.2 1Z" />
                            <path class="fill-slate-500"
                                d="M12.5 5a.625.625 0 0 1-.625-.625 1.252 1.252 0 0 0-1.25-1.25.625.625 0 1 1 0-1.25 1.252 1.252 0 0 0 1.25-1.25.625.625 0 1 1 1.25 0c.001.69.56 1.249 1.25 1.25a.625.625 0 1 1 0 1.25c-.69.001-1.249.56-1.25 1.25A.625.625 0 0 1 12.5 5Z" />
                        </svg>
                        <span class="sr-only">Switch to light / dark version</span>
                    </label>
                </div>
                {{search}}
                {{#if @site.members_enabled}}
                {{^if @member}}
                <a class="gh-button ml-10 sm:ml-0" href="{{@site.signup_url}}">Subscribe</a>
                {{else}}
                <a class="gh-button ml-10 sm:ml-0" href="#/portal/account">Account</a>
                {{/if}}
                {{/if}}
            </div>
        </div>
    </nav>
</header>